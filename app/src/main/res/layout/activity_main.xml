<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <Button
        android:id="@+id/btnAddEtudiant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/add"
        android:padding="10dp"
        android:text="Ajouter un étudiant"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnListeEtudiant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir la liste des étudiants"
        android:drawableLeft="@drawable/list"
        android:layout_below="@id/btnAddEtudiant"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_background"
        android:padding="10dp"
        android:textColor="@android:color/black" />

</RelativeLayout>
